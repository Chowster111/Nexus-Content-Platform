# Production Environment Configuration
# Copy this file to .env.production and customize for your production setup
# IMPORTANT: Use AWS Secrets Manager or similar for sensitive values in production

# Environment
ENVIRONMENT=production
DEBUG=false

# Application Info
APP_NAME=Engineering Blog Recommender API
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered engineering blog recommendation system

# Database Configuration (Supabase)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_SERVICE_ROLE=your-production-supabase-service-role-key
SUPABASE_ANON_KEY=your-production-supabase-anon-key
DB_CONNECTION_TIMEOUT=30
DB_MAX_RETRIES=5
DB_RETRY_DELAY=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["https://engineeringblogrecommender.com"]
CORS_CREDENTIALS=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=your-production-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Machine Learning Configuration
HF_API_TOKEN=your-production-huggingface-token
OPENROUTER_API_KEY=your-production-openrouter-api-key
OPENROUTER_MODEL=mistralai/mistral-7b-instruct
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
MAX_SEQUENCE_LENGTH=512
TOKENIZERS_PARALLELISM=false
RECOMMENDATION_TOP_K=10
SIMILARITY_THRESHOLD=0.5

# Scraper Configuration
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=60
SELENIUM_IMPLICIT_WAIT=20
SCRAPER_DELAY=3.0
MAX_ARTICLES_PER_SOURCE=20
SCRAPER_MAX_RETRIES=5
SCRAPER_RETRY_DELAY=5.0
ENABLED_SOURCES=["netflix", "airbnb", "uber", "stripe"]

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=WARNING
LOG_FORMAT=json
LOG_FILE=/var/log/app.log
SENTRY_DSN=your-production-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Feature Flags (Production - Conservative)
ENABLE_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_SCRAPING=false
ENABLE_ANALYTICS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_PERSONALIZATION=true
ENABLE_AUTO_TAGGING=true
ENABLE_SUMMARIZATION=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true 