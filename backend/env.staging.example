# Staging Environment Configuration
# Copy this file to .env.staging and customize for your staging setup

# Environment
ENVIRONMENT=staging
DEBUG=false

# Application Info
APP_NAME=Engineering Blog Recommender API
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered engineering blog recommendation system

# Database Configuration (Supabase)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_SERVICE_ROLE=your-staging-supabase-service-role-key
SUPABASE_ANON_KEY=your-staging-supabase-anon-key
DB_CONNECTION_TIMEOUT=30
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
CORS_ORIGINS=["https://staging.engineeringblogrecommender.com"]
CORS_CREDENTIALS=true
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=your-staging-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Machine Learning Configuration
HF_API_TOKEN=your-staging-huggingface-token
OPENROUTER_API_KEY=your-staging-openrouter-api-key
OPENROUTER_MODEL=mistralai/mistral-7b-instruct
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
MAX_SEQUENCE_LENGTH=512
TOKENIZERS_PARALLELISM=false
RECOMMENDATION_TOP_K=10
SIMILARITY_THRESHOLD=0.5

# Scraper Configuration
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
SCRAPER_DELAY=2.0
MAX_ARTICLES_PER_SOURCE=25
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=3.0
ENABLED_SOURCES=["netflix", "airbnb", "uber", "stripe"]

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/app.log
SENTRY_DSN=your-staging-sentry-dsn
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Feature Flags (Staging - Most Enabled)
ENABLE_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_SCRAPING=true
ENABLE_ANALYTICS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_PERSONALIZATION=true
ENABLE_AUTO_TAGGING=true
ENABLE_SUMMARIZATION=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true 