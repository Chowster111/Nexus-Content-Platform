# Development Environment Configuration
# Copy this file to .env and customize for your local setup

# Environment
ENVIRONMENT=development
DEBUG=true

# Application Info
APP_NAME=Engineering Blog Recommender API
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-powered engineering blog recommendation system

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=your-supabase-service-role-key
SUPABASE_ANON_KEY=your-supabase-anon-key
DB_CONNECTION_TIMEOUT=30
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "*"]
CORS_CREDENTIALS=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=your-secret-key-for-development
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Machine Learning Configuration
HF_API_TOKEN=your-huggingface-token
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=mistralai/mistral-7b-instruct
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
MAX_SEQUENCE_LENGTH=512
TOKENIZERS_PARALLELISM=false
RECOMMENDATION_TOP_K=10
SIMILARITY_THRESHOLD=0.5

# Scraper Configuration
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
SCRAPER_DELAY=1.0
MAX_ARTICLES_PER_SOURCE=50
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=2.0
ENABLED_SOURCES=["netflix", "airbnb", "uber", "stripe", "tinder", "doordash", "slack", "notion", "meta", "robinhood"]

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/app.log
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Feature Flags (Development - All Enabled)
ENABLE_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_SCRAPING=true
ENABLE_ANALYTICS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_PERSONALIZATION=true
ENABLE_AUTO_TAGGING=true
ENABLE_SUMMARIZATION=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true 